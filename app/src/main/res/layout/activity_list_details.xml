<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9E7EEE"
    tools:context=".ListDetails">


    <ImageView
        android:id="@+id/book1"
        android:layout_width="362dp"
        android:layout_height="157dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_x="99dp"
        android:layout_y="14dp"
        android:src="@drawable/book1"
        android:textAlignment="center"
        android:paddingBottom="20dp"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="341dp"
        android:layout_height="87dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_x="43dp"
        android:layout_y="197dp"
        android:text="YOU CAN WIN: A Step by Step tool for Top Achievers"
        android:textAlignment="center"
        android:textColor="#808"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Price: Rs. 149 (Inclusive of All Taxes)"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:background="#EAE80C"
        android:textStyle="bold"
        android:text="ADD TO CART" />

</LinearLayout>